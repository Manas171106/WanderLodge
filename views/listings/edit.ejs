<% layout("./layouts/boilerplate.ejs") %>

    <body>
        <div class="row mt-3">
            <div class="col-8 offset-2">
                <h2>Edit listing</h2><br>
                <form action="/listings/<%= editlisting._id %>?_method=PUT" method="POST">
                    <div class="mb-3"><label for="title" class="form-label">Title: </label>
                        <input type="text" id="title" value="<%= editlisting.title %>" name="listings[title]"
                            class="form-control">
                    </div>
                    <div class="mb-3"><label for="description" class="form-label">Description: </label>
                        <textarea name="listings[description]" id="description" placeholder="enter description"
                            class="form-control"><%= editlisting.description %></textarea>
                    </div>
                    <div class="mb-3"><label for="image" class="form-label">Image URL: </label>
            <input name="listings[image]" type="text" id="image" value="<%= editlisting.image.url %>"
                class="form-control">
        </div>
                    <div class="row">
                        <div class="mb-3 col-md-4"><label for="price" class="form-label">Price: </label>
                            <input name="listings[price]" type="number" id="price" value="<%= editlisting.price %>"
                                class="form-control">
                        </div>

                        <div class="mb-3 col-md-8"><label for="country" class="form-label">Country: </label>
                            <input name="listings[country]" type="text" value="<%= editlisting.country %>" id="country"
                                class="form-control">
                        </div>
                    </div>

                    <div class="mb-3"><label for="location" class="form-label">Locations: </label>
                        <input name="listings[location]" type="text" id="location" value="<%= editlisting.location %>"
                            class="form-control">
                    </div>
                    <button class="btn btn-dark edit-btn">Edit</button>
                </form>
            </div>
        </div>
    </body>