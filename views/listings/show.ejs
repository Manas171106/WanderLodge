<% layout("./layouts/boilerplate.ejs") %>

    <body>
        <!-- <h1>Listing with id : <%= Listing._id%> -->
        </h1>
        <div class="row mt-3">
            <div class="col-8 offset-3">
                <h3>Listing Details: </h3>
            </div>
            <div class="card col-6 offset-3 show-card">
                <img src="<%= Listing.image.url %>" class="card-img-top show-img" alt="Listings_image    ">
                <div class="card-body">
                    <p class="card-title">
                        <b>
                            <%= Listing.title %>
                        </b><br>
                        <%= Listing.description %> <br>
                            <%= Listing.price.toLocaleString("en-IN") %> <br>
                                <%= Listing.location %> <br>
                                    <%= Listing.country %> <br>
                    </p>

                </div>
            </div>

        </div>
        <div class="btns">
            <a href="/listings/<%= Listing._id %>/edit" class="btn btn-dark offset-3 col-1">Edit</a>

            <form action="/listings/<%= Listing._id %>?_method=DELETE" method="post"><button
                    class="btn btn-dark offset-4">Delete</button></form>
        </div>

    </body>